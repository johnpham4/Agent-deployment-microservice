# Example environment configuration
# Copy this file to .env and update the values

# Application settings
APP_NAME=QA Chatbot Service
VERSION=1.0.0
DEBUG=false
HOST=localhost
PORT=8000

# CORS settings
ALLOWED_ORIGINS=*

# Model settings
MODEL_PATH=/path/to/your/model
MAX_TOKENS=200
TEMPERATURE=0.7
TOP_P=1.0

# Database settings
DATABASE_URL=sqlite:///./chat_history.db

# Redis settings (for caching)
REDIS_URL=redis://localhost:6379

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security settings - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-very-secure-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Chat template
CHAT_TEMPLATE={% for message in messages %}{% if message['role'] == 'system' %}{{ '<|system|>\n' + message['content'] + eos_token }}{% elif message['role'] == 'user' %}{{ '<|user|>\n' + message['content'] + eos_token }}{% elif message['role'] == 'assistant' %}{{ '<|assistant|>\n' + message['content'] + eos_token }}{% endif %}{% if loop.last and add_generation_prompt %}{{ '<|assistant|>' }}{% endif %}{% endfor %}
