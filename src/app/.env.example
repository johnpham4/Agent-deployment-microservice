# Application settings
APP_NAME=QA Chatbot Service
VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Model settings
MODEL_PATH=/app/merged_model
MAX_TOKENS=200
TEMPERATURE=0.7
TOP_P=1.0

# Database settings
DATABASE_URL=sqlite:///./chat_history.db

# Redis settings (optional)
REDIS_URL=redis://localhost:6379

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Security settings
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# CORS settings
ALLOWED_ORIGINS=["*"]

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090
